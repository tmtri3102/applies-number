{
  "manifest_version": 3,
  "name": "LinkedIn Applicant Count",
  "version": "1.0",
  "description": "Displays the exact number of applicants on LinkedIn job postings.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.linkedin.com/voyager/api/jobs/jobPostings/*",
    "https://www.linkedin.com/jobs/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ]
}
